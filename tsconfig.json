{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@utils": ["utils/"],
      "@hooks/*": ["hooks/*"],
      "@types": ["types/"],
      "@constants": ["constants/"],
      "@lib/*": ["lib/*/"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "codegen.js"],
  "exclude": ["node_modules", "**/*/generate.tsx"]
}
